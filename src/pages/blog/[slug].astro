---
import { getEntryBySlug } from "astro:content";
import PostLayout from '../../layouts/post.astro';

import Callout from "../../components/mdoc/Callout.astro";
import Link from "../../components/mdoc/Link.astro";
import Tabs from "../../components/mdoc/Tabs/Tabs.astro";

// get the views counts

const { slug } = Astro.params
const entry = await getEntryBySlug('blog', slug)
const resp = await fetch(`https://api.countapi.xyz/hit/astro-blog/${slug}`)
const renderResult = await entry.render()
const Content = renderResult.Content
---

<PostLayout content={entry.data}>
    <Content components={{
        Callout,
        Link,
        Tabs
    }} />
</PostLayout>
